<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECL_project_file" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ECL_project_file" parent="Base.Theme.ECL_project_file" />

    <!--  Card Styles  -->
    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="CardStyle.Header">
        <item name="cardBackgroundColor">@color/user_header_background</item>
        <item name="cardElevation">2dp</item>
    </style>
    <!--  Button Styles  -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingHorizontal">24dp</item>
    </style>
    <style name="ButtonStyle.Primary">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonStyle.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/border_color</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingHorizontal">24dp</item>
    </style>
    <!--  Text Styles  -->
    <style name="TextStyle">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextStyle.Heading">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.Subheading">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.Body">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextStyle.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="TextStyle.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <!--  Input Styles  -->
    <style name="InputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    <!--  Badge Styles  -->
    <style name="BadgeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Progress Bar Style  -->
    <style name="ProgressBarStyle" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackColor">@color/progress_background</item>
        <item name="indicatorColor">@color/progress_primary</item>
        <item name="trackCornerRadius">8dp</item>
        <item name="android:layout_height">16dp</item>
    </style>
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
    </style>
</resources>