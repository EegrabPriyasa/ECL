<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F8FAFC"/> <!-- light grey background -->
            <stroke android:width="1dp" android:color="#B3D4FF"/> <!-- light blue border -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Dropdown Arrow -->
    <item android:drawable="@drawable/arrow_down" android:gravity="end|center_vertical" android:right="12dp"/>
</layer-list>