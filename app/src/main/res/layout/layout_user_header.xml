<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/user_header_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Main User Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- User Avatar and Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Avatar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="32dp"
                    app:cardBackgroundColor="@color/primary_blue"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/user_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="PT"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- User Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Username and Authentication -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">


                        <TextView
                            android:id="@+id/username"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Priyasa Tapadar"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:strokeColor="@color/success_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginEnd="4dp"
                                    android:src="@drawable/shield" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Authenticated"
                                    android:textSize="12sp"
                                    android:textColor="@color/success_color" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Session Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/time" />

                        <TextView
                            android:id="@+id/session_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Session: 10:30 AM"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginEnd="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shift: A"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginEnd="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plant: ECL Main"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Department and Logout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Department Display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assigned Department"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/border_color"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:minWidth="200dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/building"
                                 />

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/circle_blue" />

                            <TextView
                                android:id="@+id/tv_pageTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mini Heel"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Logout Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/error_light"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/logout_icon"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:textSize="16sp"
                            android:textColor="@color/error_color" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Permissions Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Permissions Grid -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature Control"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Production Process -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Production Process"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- MHF Operations -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MHF Operations"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Data Recording -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Recording"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Last Login -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last login: 12/31/2024 08:30 AM"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>