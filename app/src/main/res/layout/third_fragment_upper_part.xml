                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvValuePInitial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.113"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 4. S% -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#E3F2FD"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvLabelSInitial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S%:"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvValueSInitial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.026"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 5. Mn% -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#E3F2FD"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvLabelMnInitial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mn%:"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvValueMnInitial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.081"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 6. CE% -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#E3F2FD"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvLabelCEInitial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CE%:"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvValueCEInitial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00024"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </GridLayout>
            </LinearLayout>

            <!-- Final Composition Box -->
            <LinearLayout
                android:id="@+id/final_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/bg_card"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tab_layout"
                app:layout_constraintStart_toEndOf="@id/initial_box"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final Composition"
                    android:textColor="@color/info_color"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <!-- Row of values -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true">

                    <!-- 1. C% -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#E3F2FD"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvLabelC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C%:"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvValueC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.8"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 2. Si% -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#E3F2FD"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvLabelSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Si%:"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvValueSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.7"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 3. P% -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#E3F2FD"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvLabelP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P%:"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvValueP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.113"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 4. S% -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#E3F2FD"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvLabelS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S%:"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvValueS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.026"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 5. Mn% -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="#E3F2FD"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvLabelMn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mn%:"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvValueMn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.081"
                            android:textColor="#2E7D32"
                            android:textSize="14sp"
                            android:textStyle="bold"
