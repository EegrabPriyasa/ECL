<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TabScreen.MiniHeel.MBFProcessFragment">

    <!-- Left Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/leftCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MBF Tap Time/Metal from MBF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/info_dark"
                android:drawablePadding="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Ladle Sequence -->
            <TextView
                android:id="@+id/tvLadleSeq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ladle Sequence No:"
                android:textColor="@color/info_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinnerLadleSeq"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_field_design"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/tvLadleSeq"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Tap Time -->
            <TextView
                android:id="@+id/tvTapTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap Time:"
                android:textSize="14sp"
                android:textColor="@color/info_dark"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerLadleSeq"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/etTapTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_field_design"
                android:padding="8dp"
                android:text="13:08"
                android:focusable="false"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvTapTimeLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Temp -->
            <TextView
                android:id="@+id/tvTempLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp:"
                android:textColor="@color/info_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/etTapTime"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTempValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_field_design"
                android:text=""
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvTempLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Weight -->
            <TextView
                android:id="@+id/tvWeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight:"
                android:textColor="@color/info_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvTempValue"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="8dp"
                android:text="22T"
                app:layout_constraintTop_toBottomOf="@id/tvWeightLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Accepted Button -->
            <Button
                android:id="@+id/btnAccepted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Accepted"
                android:layout_marginTop="16dp"
                android:backgroundTint="#81C784"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/etWeight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Success Note -->
            <TextView
                android:id="@+id/tvSuccessNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E8F5E9"
                android:text="MBF Tap accepted at 12:07:11 PM"
                android:textColor="#388E3C"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/btnAccepted"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Right Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rightCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@id/leftCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MBF Composition"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:textColor="@color/info_dark"
                android:layout_marginBottom="16dp" />

            <!-- Grid of Compositions -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- 1. C% -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@color/compositionBg"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLabelC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C%:"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvValueC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.8"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 2. Si% -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@color/compositionBg"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLabelSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si%:"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvValueSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.7"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 3. P% -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@color/compositionBg"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLabelMn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mn%:"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvValueMn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.113"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 4. S% -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@color/compositionBg"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLabelS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S%:"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvValueS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.026"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 5. Mn% -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@color/compositionBg"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLabelP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mn%:"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvValueP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.081"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 6. CE% -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@color/compositionBg"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLabelTi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ti%:"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvValueTi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00024"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@color/compositionBg"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLabelCr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cr%:"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvValueCr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00024"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </GridLayout>

            <!-- Note -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/compositionBg"
                android:padding="8dp"
                android:text="Note: Composition values are auto-retrieved from the database"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- under right Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BelowRightCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@id/leftCard"
        app:layout_constraintTop_toBottomOf="@id/rightCard"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mhf_furnace_pouring"
                android:textColor="#1E88E5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Start Pouring Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_pouring"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/success_dark"
                android:drawablePadding="8dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                />

            <!-- Stop Pouring Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stop_pouring"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/error_color"
                android:drawablePadding="8dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp" />

            <!-- Status Message -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mhf_furnace_pouring_stopped"
                android:drawableLeft="@drawable/danger"
                android:drawablePadding="8dp"
                android:background="#F5F5F5"
                android:textColor="#424242"
                android:padding="12dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>