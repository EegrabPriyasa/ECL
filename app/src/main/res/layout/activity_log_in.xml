<!--                android:textSize="14sp"-->
<!--                app:layout_constraintTop_toBottomOf="@id/title_department"-->
<!--                app:layout_constraintStart_toStartOf="@+id/title_department"-->
<!--                app:layout_constraintEnd_toEndOf="@+id/title_department" />-->

<!--            &lt;!&ndash; Dropdown &ndash;&gt;-->
<!--            <Spinner-->
<!--                android:id="@+id/deptSpinner"-->
<!--                android:layout_width="300dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:background="@drawable/edit_field_design"-->
