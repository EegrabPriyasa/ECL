<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabScreen.Converter.MpConverterActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">
            <LinearLayout
                android:id="@+id/baseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@color/primary_blue"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:src="@drawable/ecl_logo"
                        android:textColor="@android:color/white"
                        android:textSize="24sp" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ELECTROSTEEL CASTINGS LIMITED"
                        android:textColor="@color/text_primary"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Converter Production System"
                        android:textColor="@color/primary_blue"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/includeUserInfo"
                layout="@layout/layout_user_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/baseLayout"
                />
            <include layout="@layout/layout_system_setup"
                android:id="@+id/includeSystemSetup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/includeUserInfo"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTreatmentInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toStartOf="@+id/finalComposition"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/includeSystemSetup"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#4285F4"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/settings" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Treatment Information"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Info Fields -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:rowCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dept:"
                            android:textSize="14sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#4285F4"
                            android:padding="8dp"
                            android:text="MP"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trt No:"
                            android:textSize="14sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#4285F4"
                            android:padding="8dp"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Metal Form:"
                            android:textSize="14sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#4285F4"
                            android:padding="8dp"
                            android:text="MHF"
                            android:layout_marginStart="10dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Metal Temp:"
                            android:textSize="14sp"
                            android:textColor="@color/black" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#F5F5F5"
                            android:padding="8dp"
                            android:text="500" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Metal Qty:"
                            android:textSize="14sp"
                            android:textColor="@color/black" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#F5F5F5"
                            android:padding="8dp"
                            android:text="4T" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ladle No:"
                            android:textSize="14sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#4285F4"
                            android:padding="8dp"
                            android:text="5"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shift:"
                            android:textSize="14sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#4285F4"
                            android:padding="8dp"
                            android:text="A"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </GridLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Treatment Timing -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/time"
                                android:tint="@color/blue"
                                 />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Treatment Timing"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="4"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trt Start Time:"
                                android:textSize="14sp"
                                android:textColor="@color/black" />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:backgroundTint="#4285F4"
                                android:text="Time"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Metal In Time:"
                                android:textSize="14sp"
                                android:textColor="@color/black" />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:backgroundTint="#4285F4"
                                android:text="Time"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trt Stop Time:"
                                android:textSize="14sp"
                                android:textColor="@color/black" />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:backgroundTint="#4285F4"
                                android:text="Time"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Metal Out Time:"
                                android:textSize="14sp"
                                android:textColor="@color/black" />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:backgroundTint="#4285F4"
                                android:text="Time"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                        </GridLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:padding="12dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#F5F5F5"
                            android:padding="8dp"
                            android:hint="Ladle In No" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#F5F5F5"
                            android:padding="8dp"
                            android:hint="Ladle Out No" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/finalComposition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardTreatmentInfo"
                app:layout_constraintTop_toBottomOf="@+id/includeSystemSetup">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary_blue"
                        android:padding="8dp"
                        android:text="Final Composition after treatment (end of casting)\n- last metal for Residual Mg"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Grid Layout for Values -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="7">

                        <!-- Row 1 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="C%:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="1.77"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                        <!-- Row 2 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="Si%:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="3.70"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                        <!-- Row 3 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="Mn%:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="0.113"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                        <!-- Row 4 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="S%:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="0.0002"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                        <!-- Row 5 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="P%:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="0.026"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                        <!-- Row 6 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="C.E:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="0.00024"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                        <!-- Row 7 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="Mg%:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:background="#F8F8F8"
                            android:padding="12dp"
                            android:text="3.995%"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>






        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>